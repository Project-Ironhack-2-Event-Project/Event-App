<div class="create-form">
  <h2>Create</h2>
  <form action="/profil/create" method="POST" enctype="multipart/form-data">

    <label> Title :
      <input type="text" name="title" placeholder="Title" />
    </label>
    
    <label> Type of your Event :
        <select name="type">
          <option value="Concert">Concert</option>
          <option value="Theater">Theater</option>
          <option value="Outside">Outside</option>
          <option value="Dinner">Dinner</option>
          <option value="Sport">Sport</option>
          <option value="Bar">Bar</option>
          <option value="Talking">Talking</option>
          <option value="Party">Party</option>
          <option value="Other">Other</option>
        </select>
    </label>

    <label> Choose a City :
      <select name="city">
        <option value="Bordeaux">Bordeaux</option>
        <option value="Berlin">Berlin</option>
        <option value="Paris">Paris</option>
        <option value="Sevilla">Sevilla</option>
      </select>
    </label>

    <label> Place of Event :
      <input type="text" name="place" placeholder="Place"/>
    </label>

    <label> Description of Event :
      <textarea id="description-input" type="text" name="description" rows="5" placeholder="Description of your Event" ></textarea>
    </label>

    <label> Date of Event :
      <input type="date" name="date"  />
    </label>
    
    <label> Pictures of Event :
      <input type="file" name="pictures"/>
    </label>
    
    <label> Price of Event :
      <input type="number" name="price"/>
    </label>


    <button id="btn-create" type="submit">Create your event</button>


    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}

  </form>
</div>