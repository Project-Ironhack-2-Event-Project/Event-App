<div class="edit-form">
  <h2>Edit : {{eventEdit.title}}</h2>
  <form action="/profil/{{eventEdit._id}}/edit" method="POST">
    <label> Title :
      <input type="text" name="title"  value="{{eventEdit.title}}" />
    </label>
  
    <label> Type of your Event :
      <select name="type" >
          <option value="{{eventEdit.type}}">{{eventEdit.type}}</option>
          <option value="Concert">Concert</option>
          <option value="Theater">Theater</option>
          <option value="Outside">Outside</option>
          <option value="Dinner">Dinner</option>
          <option value="Sport">Sport</option>
          <option value="Bar">Bar</option>
          <option value="Talking">Talking</option>
          <option value="Party">Party</option>
          <option value="Other">Other</option>
      </select>
  </label>

      <label> Choose a City :
      <select name="city">
        <option value="{{eventEdit.city}}">{{eventEdit.city}}</option>
        <option value="Bordeaux">Bordeaux</option>
        <option value="Berlin">Berlin</option>
        <option value="Paris">Paris</option>
        <option value="Sevilla">Sevilla</option>
      </select>
    </label>

    <label> Place of Event :
      <input type="text" name="place" value="{{eventEdit.place}}" />
    </label>

    <label> Description of Event :
      <textarea id="description-input" type="text" name="description" rows="3" >{{eventEdit.description}}</textarea>
    </label>

    <label> Date of Event :
      <input type="date" name="date" value="{{eventEdit.date}}" />
    </label>
    
    <label> Pictures of Event :
      <input type="file" name="pictures" value="{{eventEdit.pictures}}"/>
    </label>
    
    <label> Price of Event :
      <input type="number" name="price" value="{{eventEdit.price}}"/>
    </label>

    <button id="btn-edit" type="submit">Edit your event</button>


    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>