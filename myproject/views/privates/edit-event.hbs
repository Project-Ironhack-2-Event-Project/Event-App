<div class="edit-form">
  <h2>Edit :</h2>
  <form action="/profil/:id/edit" method="POST">

    <label> Title :
      <input type="text" name="title" placeholder="{{this.title}}" />
    </label>

    <label> Place of Event :
      <input type="text" name="place" placeholder="{{this.place}}" />
    </label>

    <label> Description of Event :
      <input type="text" name="description" placeholder="{{this.description}} of your Event" />
    </label>

    <label> Date of Event :
      <input type="date" name="date"  />
    </label>
    
    <label> Pictures of Event :
      <input type="text" name="images"/>
    </label>
    
    <label> Price of Event :
      <input type="number" name="price" placeholder="{{this.price}}"/>
    </label>

    <button id="btn-edit" type="submit">Edit your event</button>


    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>