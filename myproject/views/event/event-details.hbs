<div class="event-detail">
    <div class="event-detail-information">
     <img src="{{eventId.pictures}}">
        <h2>{{eventId.title}}</h2>
        <ul>
            <li>Type : {{eventId.type}}</li>
            <li>Date : {{eventId.date}}</li>
            <li>City : {{eventId.city}}</li>
            <li>Place : {{eventId.place}}</li>
            <li>Description : {{eventId.description}}</li>
            <li>By : {{eventId.username}}</li>
            <li>Price : {{eventId.price}} $</li>
        </ul> 
        
    </div>

    <div id="event-chat">
        <h2>Chat :</h2>
        <form id="chat-form" action="/event/{{eventId._id}}" method="post">
            <label>
                <input id="message-input" type="text" name="content" placeholder="Enter Message">
            </label>
                <button  id="send-chat-btn" type="submit">Send</button>
        </form>
    </div>
</div>